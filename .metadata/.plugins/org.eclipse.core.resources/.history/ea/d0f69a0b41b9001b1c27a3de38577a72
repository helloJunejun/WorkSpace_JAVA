package com.work.view;

public class GuGuDanTest {
	
	public static void main(String[] args) {
		System.out.println("\n3. do~while 구문을 활용한 구구단");
		
		int dan = 2;
		int times = 1;
		do {
			do {
			System.out.print(dan+ "*" + times + "=" + dan * times+"\t");
			dan++;
			} while(dan<=9);
			System.out.print("\n");
			times++;
			
		} while(times <= 9);
			System.out.print("\n");
			
			
//		int dan = 2;
//		do {
//			System.out.print(dan + "단\t");
//			dan++;
//		} while(dan <= 9);
//			System.out.print("\n");
	}
		
		
		
	
		public static void main3(String[] args) {
		System.out.println("\n2. while 구문을 활용한 구구단");
		
		int i = 2;
		while(i <= 9) {
			System.out.print(i + "단\t");
			i++;
		}
		System.out.print("\n");
		
		
		int times = 1;		
		while(times<=9) {
			int dan = 2;
			while(dan<=9) {
			System.out.print(dan+ "*" + times + "=" + dan * times+"\t");
			dan++;
		}
			
			System.out.print("\n");
			times++;
	}	
}
	
	public static void main2(String[] args) {
		System.out.println("\n1. for 구문을 활용한 구구단");
		
		int dan;
		int times;
		for(dan = 2; dan <= 9; dan++) {
			System.out.print(dan + "단\t");
		}
		System.out.print("\n");
		
		for(times = 1; times <= 9; times++) {
			for(dan = 2; dan <= 9; dan++) {
				
				System.out.print(dan+ "*" + times + "=" + dan * times+"\t");
			
			}		
			System.out.println();
	}
				
}
		
}
	
